{
    "name": "Rookwood",
    "version": "1.0.0",
    "description": "Rookwood Website",
    "scripts": {
        "start": "sass sass/main.scss css/style.css --watch",
        "compile:sass": "sass sass/main.scss css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
        "compress:css": "sass --style=compressed css/style.prefix.css css/style.css",
        "build:css": "npm-run-all compile:sass prefix:css compress:css",
        "minify": "html-minifier --input-dir src --output-dir ./ --file-ext html --remove-comments --collapse-whitespace --minify-js true --minify-css true"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jlm222/Uruk.git"
    },
    "author": "Jordan Mellor",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jlm222/Uruk/issues"
    },
    "homepage": "https://github.com/jlm222/Uruk#readme",
    "devDependencies": {
        "@babel/core": "^7.14.0",
        "autoprefixer": "^10.2.4",
        "babel-loader": "^8.2.2",
        "html-minifier": "^4.0.0",
        "i": "^0.3.6",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "webpack": "^5.37.0",
        "webpack-cli": "^4.7.0"
    }
}
